const mongoose= require('mongoose')

const userSchema=mongoose.Schema({
    name:{
        type:String,
        require:true,
        min:5
    },
    email:{
        type:String,
        require:true,
        min:5,
        max:32
    },
    password:{
        type:String,
        require:true,
        min:8
    },
    date:{
        type:Date,
        default:Date.now
    }

})

module.exports=mongoose.model('user',userSchema)